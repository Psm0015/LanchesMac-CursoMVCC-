@model Pedido

<div class="container mt-5">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Nome</strong></p>
            <p>Data do Pedido : <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido : <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                    </tr>
                }
            </table>
            <div class="d-flex justify-content-between">
                <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
                <a class="btn btn-outline-info" type="button" asp-controller="Home" asp-action="Index">Retornar</a>
            </div>

        </div>
    </div>
</div>
<div class="form-group" style="text-align : center">
    <h3>
        
    </h3>
</div>