@{
    ViewData["Title"] = "GerenciarImagens";
}

<div class ="row">
    <div class="col">
        <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
            <div class="form-group">
                <div class="col-md-10">
                    <p class="poppins-bold">Selecione um ou mais arquivos para enviar : </p>
                    <p class="poppins-regular-italic text-danger">Arquivos com o mesmo nome serão sobrescritos</p>
                    <input type="file" name="files" multiple class="btn btn-outline-primary" />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Enviar Arquivo(s)" class="btn btn-outline-success"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col">
        <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Visualizar Arquivos no Servidor" class="btn btn-outline-warning"
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    @if(ViewData["Deletado"] != null)
    {
        <p>@ViewData["Deletado"]</p>
    }
</div>